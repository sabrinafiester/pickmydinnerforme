	<div id="green">
		<div class="container">
			<div class="row">
              <div class="col-lg-2"></div>
				<div class="col-lg-5">
                  <img src="bolt/img/dinner.jpg">
				</div>
				
				<div class="col-lg-4 centered">
                  <form class="form-horizontal">
                    <fieldset>



                      <!-- Select Basic -->
                      <div class="form-group">
                        <label class="col-md-4 control-label" for="time">How much time do you have?</label>
                        <div class="col-md-8">
                          <select id="time" name="time" class="form-control">
                            <option value="15">15 Minutes</option>
                            <option value="30">30 Minutes</option>
                            <option value="45">45 Minutes</option>
                            <option value="60">1 Hour</option>
                            <option value="75">1 Hour, 15 Minutes</option>
                            <option value="90">1 Hour, 30 Minutes</option>
                            <option value="105">1 Hour, 45 Minutes</option>
                            <option value="120">2 Hours</option>
                          </select>
                        </div>
                      </div>

                      <!-- Multiple Checkboxes -->
                      <div class="form-group">
                        <label class="col-md-4 control-label" for="diet">Do you have any dietary restrictions?</label>
                        <div class="col-md-8">
                          <div class="checkbox">
                            <label for="diet-0">
                              <input type="checkbox" name="diet" id="vegetarian" value="Vegetarian">
                              Vegetarian
                            </label>
                          </div>
                          <div class="checkbox">
                            <label for="diet-3">
                              <input type="checkbox" name="diet" id="gluten" value="Gluten">
                              Gluten Free
                            </label>
                          </div>
                        </div>
                      </div>

                      <!-- Button -->
                      <div class="form-group">
                        <label class="col-md-4 control-label" for="submit"></label>
                        <div class="col-md-4">
                          <button id="submit" name="submit" class="btn btn-primary" data-toggle="modal" data-target="#recipe">Pick My Dinner!</button>
                        </div>
                      </div>

                    </fieldset>
                  </form>

                </div>
